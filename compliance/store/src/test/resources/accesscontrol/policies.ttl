@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix acl: <http://www.openrdf.org/schema/sesame/acl/> .
@prefix ex: <http://example.org/> .

ex:bob a acl:User;
       acl:hasRole ex:Researcher .

ex:alice a acl:User;
         acl:hasRole ex:Manager .

ex:Administrator a acl:Role .

ex:Manager a acl:Role.

ex:ProjectLeader a acl:Role ;
    acl:subsumes ex:Researcher .

ex:Researcher a acl:Role.

ex:private a acl:Status .
ex:public a acl:Status.

ex:assignment1 a acl:PermissionAssignment ;
	acl:toRole ex:Researcher ;
	acl:hasPermission ex:permission1 .

ex:permission1 a acl:Permission ;
	acl:hasOperation acl:view;
	acl:hasOperation acl:edit;
	acl:hasMatch [ a acl:ObjectMatch  ;
	               acl:hasTeam ex:Researcher ;
		       acl:hasStatus ex:private ] .

ex:assignment2 a acl:PermissionAssignment ;
	acl:toRole ex:Manager ;
	acl:hasPermission ex:permission2 .

ex:permission2 a acl:Permission ;
	acl:hasOperation acl:view;
	acl:hasOperation acl:edit;
	acl:hasMatch [ a acl:ObjectMatch  ;
	               acl:hasTeam ex:Manager ;
		       acl:hasStatus ex:private ] .

ex:assignment3 a acl:PermissionAssignment ;
	acl:toRole ex:Manager ;
	acl:hasPermission ex:permission3 .

ex:permission3 a acl:Permission ;
	acl:hasOperation acl:view;
	acl:hasMatch [ a acl:ObjectMatch  ;
		       acl:hasStatus ex:public ] .

