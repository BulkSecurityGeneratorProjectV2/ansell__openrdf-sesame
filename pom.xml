<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>org.openrdf</groupId>
	<artifactId>openrdf-sesame</artifactId>
	<version>2.1-SNAPSHOT</version>
	<packaging>pom</packaging>

	<modules>
		<module>core</module>
		<module>tck</module>
	</modules>

	<name>OpenRDF Sesame</name>
	<description>An extensible framework for RDF and RDF Schema data.</description>
	<url>http://www.openrdf.org/</url>
	<inceptionYear>2001</inceptionYear>
	<licenses>
		<license>
			<name>Aduna BSD-style license</name>
			<url>http://www.aduna-software.com/documents/legal/licenses/aduna-bsd.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<organization>
		<name>Aduna</name>
		<url>http://www.aduna-software.com/</url>
	</organization>

	<properties>
		<slf4j.version>1.3.0</slf4j.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<!-- Aduna modules -->
			<dependency>
				<groupId>info.aduna</groupId>
				<artifactId>aduna-iteration</artifactId>
				<version>2.0-SNAPSHOT</version>
			</dependency>

			<dependency>
				<groupId>info.aduna</groupId>
				<artifactId>aduna-collections</artifactId>
				<version>2.0-SNAPSHOT</version>
			</dependency>

			<dependency>
				<groupId>info.aduna</groupId>
				<artifactId>aduna-concurrent</artifactId>
				<version>2.0-SNAPSHOT</version>
			</dependency>

			<dependency>
				<groupId>info.aduna</groupId>
				<artifactId>aduna-lang</artifactId>
				<version>2.0-SNAPSHOT</version>
			</dependency>

			<dependency>
				<groupId>info.aduna</groupId>
				<artifactId>aduna-text</artifactId>
				<version>2.0-SNAPSHOT</version>
			</dependency>

			<dependency>
				<groupId>info.aduna</groupId>
				<artifactId>aduna-xml</artifactId>
				<version>2.0-SNAPSHOT</version>
			</dependency>

			<dependency>
				<groupId>info.aduna</groupId>
				<artifactId>aduna-io</artifactId>
				<version>2.0-SNAPSHOT</version>
			</dependency>

			<dependency>
				<groupId>info.aduna</groupId>
				<artifactId>aduna-net</artifactId>
				<version>2.0-SNAPSHOT</version>
			</dependency>

			<dependency>
				<groupId>info.aduna</groupId>
				<artifactId>aduna-app-base</artifactId>
				<version>3.0-SNAPSHOT</version>
			</dependency>

			<dependency>
				<groupId>info.aduna</groupId>
				<artifactId>aduna-webapp-base</artifactId>
				<version>3.0-SNAPSHOT</version>
				<type>war</type>
			</dependency>

			<dependency>
				<groupId>info.aduna</groupId>
				<artifactId>aduna-webapp-spring</artifactId>
				<version>3.0-SNAPSHOT</version>
			</dependency>

			<dependency>
				<groupId>info.aduna</groupId>
				<artifactId>aduna-webapp-util</artifactId>
				<version>3.0-SNAPSHOT</version>
			</dependency>

			<dependency>
				<groupId>info.aduna</groupId>
				<artifactId>aduna-net-http-server-embedded</artifactId>
				<version>1.0-SNAPSHOT</version>
			</dependency>

			<dependency>
				<groupId>info.aduna</groupId>
				<artifactId>aduna-logging-file</artifactId>
				<version>2.0-SNAPSHOT</version>
				<scope>runtime</scope>
			</dependency>

			<!-- Logging: SLF4J -->
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-api</artifactId>
				<version>${slf4j.version}</version>
			</dependency>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-simple</artifactId>
				<version>${slf4j.version}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-jdk14</artifactId>
				<version>${slf4j.version}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-log4j12</artifactId>
				<version>${slf4j.version}</version>
				<scope>runtime</scope>
			</dependency>

			<!-- Testing: JUnit -->
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>3.8.2</version>
				<scope>test</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ssh</artifactId>
			</extension>
		</extensions>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
					<encoding>utf8</encoding>
				</configuration>
			</plugin>
<!--			<plugin>
				<groupId>ch.elca.el4j.maven.plugins</groupId>
				<artifactId>maven-depgraph-plugin</artifactId>
				<configuration>
					<outDir>target/site/images</outDir>
					<dotFile>${pom.artifactId}.dot</dotFile>
					<outFile>${pom.artifactId}.png</outFile>
					<filterEmptyArtifacts>true</filterEmptyArtifacts>
				</configuration>
			</plugin>-->
		</plugins>
	</build>

	<scm>
		<connection>scm:svn:https://src.aduna-software.org/svn/${groupId}/sesame/trunk</connection>
		<developerConnection>scm:svn:https://src.aduna-software.org/svn/${groupId}/sesame/trunk</developerConnection>
		<url>http://src.aduna-software.org/viewvc/${groupId}/sesame/trunk</url>
	</scm>

	<repositories>
		<repository>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>aduna-opensource.releases</id>
			<name>Aduna Open Source - Maven repository</name>
			<url>http://repository.aduna-software.org/maven2</url>
		</repository>
		<repository>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<id>aduna-opensource.snapshots</id>
			<name>Aduna Open Source - Maven snapshot repository</name>
			<url>http://repository.aduna-software.org/maven2-snapshots</url>
		</repository>
	</repositories>

